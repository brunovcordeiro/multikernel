@startuml

namespace semaphore {

	interface SemaphoreOperations {
		+ sem_init()
		+ sem_finalize()
		+ nanvix_sem_create()
		+ nanvix_sem_open()
		+ nanvix_sem_post()
		+ nanvix_sem_wait()
		+ nanvix_sem_close()
		+ nanvix_sem_unlink()
	}

	class SemaphoreMessage {
		+ source
	    + seq	
		+ op
	}

	enum SemaphoreMessageType {
		+ SEM_OPEN
		+ SEM_POST
		+ SEM_WAIT
		+ SEM_CLOSE
		+ SEM_UNLINK
		+ SEM_CREATE
		+ SEM_CREATE_EXCL
		+ SEM_RETURN_
	}

	SemaphoreMessage    *- SemaphoreMessageType : opcode
	SemaphoreOperations -> SemaphoreMessage     : <<use>>
}

@enduml
