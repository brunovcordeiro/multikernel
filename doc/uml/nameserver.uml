@startuml

!include kernel-hal.uml

remove HAL.CoreTypes
remove HAL.CoreInterface
remove HAL.SyncTypes
remove HAL.SyncInterface
remove HAL.PortalInterface
remove HAL.PerformanceInterface

!include libs-ipc-name.uml

remove name.NameOperations
remove name.NameMessageType

namespace NameServer {
	class NameTable {
		~ int nodeid
		~ int name[NANVIX_PROC_NAME_MAX]
	}

	class NameServer {
		- void name_init(void)
		- int _name_lookup(const char *name)
		- int _name_link(int nodeid, char *name)
		- int _name_unlink(char *name)
		~ int name_server(int inbox)
	}

	NameServer.NameServer "1" *-- "HAL_NR_NOC_NODES" NameServer.NameTable : names

	NameServer.NameServer ..> name.NameMessage      : <<uses>>
	NameServer.NameServer ..> HAL.MailboxInterface : <<uses>>
	NameServer.NameServer ..> HAL.NoCInterface     : <<uses>>
}

@enduml
