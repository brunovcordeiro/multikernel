@startuml

namespace mailbox {

	enum MailboxFlags {
		~ MAILBOX_USED
		~ MAILBOX_WRONLY
	}

	class Mailbox {
		~ fd
		~ flags
		~ owner
		~ name[NANVIX_PROC_NAME_MAX]
		~ mailbox_is_valid()
		~ mailbox_is_used()
		~ mailbox_is_wronly()
		~ mailbox_sed_used()
		~ mailbox_sed_wronly()
		~ mailbox_clear_flags()
	}

	class MailboxOperations {
		- mailbox_alloc()
		- mailbox_free()
		+ mailbox_create()
		+ mailbox_open()
		+ mailbox_unlink()
		+ mailbox_close()
		+ mailbox_read()
		+ mailbox_write()
	}

	mailbox.Mailbox           .> mailbox.MailboxFlags : <<use>>
	mailbox.MailboxOperations -* mailbox.Mailbox      : mailboxes
}

@enduml

